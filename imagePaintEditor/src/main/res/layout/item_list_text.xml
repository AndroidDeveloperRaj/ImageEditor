<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txtType"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="abc"
        android:textColor="@color/textview_color"
        android:layout_alignBaseline="@+id/txtTypeName"
        android:textSize="@dimen/list_item_textView_type_size" />

    <TextView
        android:id="@+id/txtTypeName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/txtType"
        android:textSize="@dimen/list_item_textView_name_size"
        android:text="test"
        android:textColor="@color/textview_color"
        android:layout_marginLeft="@dimen/list_item_textView_name_margin_left" />

</RelativeLayout>
